<Window x:Class="RouieByHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode ="CanMinimize"
        Title="MainWindow" Height="300" Width="200"
        
        >
    <StackPanel>
        <Label Content="{Binding OutStation}"/>
        <Button Content="Switch" Command="{Binding SwithCommand}" IsEnabled="{Binding NotOnRun}"/>
        <Label Content="{Binding InStation}"/>
        <DatePicker DisplayDateStart="{Binding LowerDate}" SelectedDate="{Binding SelectedDate}"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="From"/>
            <ComboBox ItemsSource="{Binding Hours}" SelectedIndex="{Binding FromHours}"/>
            <ComboBox ItemsSource="{Binding Minutes}" SelectedIndex="{Binding FromMinutes}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="To   "/>
            <ComboBox ItemsSource="{Binding Hours}" SelectedIndex="{Binding ToHours}"/>
            <ComboBox ItemsSource="{Binding Minutes}" SelectedIndex="{Binding ToMinutes}"/>
        </StackPanel>
        <Button Content="{Binding DoButtomText}" Command="{Binding RunCommand}"/>
        <ListView ItemsSource="{Binding Log}"/>
    </StackPanel>
</Window>
