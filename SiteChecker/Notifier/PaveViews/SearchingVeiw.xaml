<UserControl x:Class="Notifier.PaveViews.SearchingVeiw"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			xmlns:local="clr-namespace:Notifier.PageViewModels"
             mc:Ignorable="d" 
			 d:DataContext="{d:DesignInstance local:TrainSearingViewModel}">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Test sound" Background="AliceBlue" BorderBrush="Transparent" Command="{Binding TestSound}"/>
        <TextBlock  Grid.Row="1" Text="{Binding Details}" TextWrapping="Wrap"/>
		<Button Grid.Row="2" Content="Link" Command="{Binding LinkCommand}" Background="DeepSkyBlue" BorderThickness="0"/>
        <Label Grid.Row="3" Content="{Binding Message}" HorizontalAlignment="Center"/>
		<Button Grid.Row="4" Content="Cancel" Command="{Binding CancelCommand}"/>
    </Grid>
</UserControl>

